{
	"$schema": "http://json-schema.org/schema#",
	"id": "http://fat-inc.io/schemas/gwt/gamestate-v1.json",
	"title": "GameState",
	"type": "object",
	"properties": {
		"id": {
			"description": "unique identifier for the game instance",
			"type": "string"
		},
		"name": {
			"description": "Name of the game instance. Determined by the creator",
			"type": "string"
		},
		"age": {
			"description": "Age in years",
			"type": "integer",
			"minimum": 0
		}
	},
	"required": [
		"firstName",
		"lastName"
	],

	"definitions": {
		"playerBoard": {
			"type": "object",
			"properties": {
				"auxMoney2": {
					"description": "Second money auxilary action",
					"type": "boolean"
				}
			}
		}
	}
}